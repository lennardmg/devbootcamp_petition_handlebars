<h3> Here are all of the supporters that signed already: </h3>

 <ul>
            {{#signatures}}
                {{#if homepage}}
            <li> <a href={{ homepage }} target="_blank" rel="noopener noreferrer">{{ first_name }} {{ last_name }}</a> &nbsp;&nbsp;&nbsp;    {{ age }}    &nbsp;&nbsp;&nbsp;  <a href=/signatures/{{ city }} > {{ city }} </a></li>
            
                {{else}}
            <li> {{ first_name }} {{ last_name }} &nbsp;&nbsp;&nbsp; {{ age }} &nbsp;&nbsp;&nbsp; <a href=/signatures/{{ city }}> {{ city }} </a></li>
                {{/if}}
            {{/signatures}}
        </ul>

<form action="/petition/delete" method="post">
    <input type="submit" class="button-action" value="❌ Delete signature">
</form>
